<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "head", metadata: site.metadata, title: data.title %}
  </head>
  <body class="{{ data.layout }} {{ data.page_class }}">
    {% render "navbar", metadata: site.metadata, resource: resource %}
    {% render "hero", metadata: site.metadata, resource: resource %}
    <main>
      {% render "why_choose_us", metadata: site.metadata, resource: resource %}
      {% render "services", metadata: site.metadata, services: site.data.services, resource: resource %}
      {{ content }}
    </main>

    {% render "footer", metadata: site.metadata %}
  </body>
</html>
